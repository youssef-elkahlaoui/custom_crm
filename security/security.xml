<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Groupe de base pour le CRM personnalisé -->
        <record id="group_custom_crm_base" model="res.groups">
            <field name="name">CRM Avancé / Utilisateur de base</field>
            <field name="implied_ids" eval="[
                (4, ref('base.group_user')),
                (4, ref('stock.group_stock_user')),
                (4, ref('sales_team.group_sale_salesman')),
                (4, ref('account.group_account_readonly'))
            ]"/>
        </record>

        <!-- Groupe administrateur pour le CRM personnalisé -->
        <record id="group_custom_crm_admin" model="res.groups">
            <field name="name">CRM Avancé / Administrateur</field>
            <field name="implied_ids" eval="[
                (4, ref('group_custom_crm_base')),
                (4, ref('stock.group_stock_manager')),
                (4, ref('sales_team.group_sale_manager')),
                (4, ref('account.group_account_manager'))
            ]"/>
        </record>

        <!-- Ajouter l'utilisateur admin au groupe admin -->
        <record id="base.user_admin" model="res.users">
            <field name="groups_id" eval="[(4, ref('group_custom_crm_admin'))]"/>
        </record>
    </data>
</odoo>
