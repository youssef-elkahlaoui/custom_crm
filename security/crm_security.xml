<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="group_crm_salesperson" model="res.groups">
        <field name="name">CRM / Sales Person</field>
        <field name="category_id" ref="base.module_category_sales_sales"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">Sales person can create opportunities and manage their own leads</field>
    </record>

    <record id="group_crm_manager" model="res.groups">
        <field name="name">CRM / Sales Manager</field>
        <field name="category_id" ref="base.module_category_sales_sales"/>
        <field name="implied_ids" eval="[(4, ref('group_crm_salesperson'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        <field name="comment">Sales manager can approve opportunities and create sales orders</field>
    </record>

    <record id="group_crm_client" model="res.groups">
        <field name="name">CRM / Client</field>
        <field name="category_id" ref="base.module_category_sales_sales"/>
        <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
        <field name="comment">Clients can view their own opportunities and submit feedback</field>
    </record>

    <!-- Record Rules -->
    <record id="crm_rule_personal_lead" model="ir.rule">
        <field name="name">Personal Leads</field>
        <field name="model_id" ref="model_crm_lead"/>
        <field name="domain_force">[('user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_crm_salesperson'))]"/>
    </record>

    <record id="crm_rule_all_lead" model="ir.rule">
        <field name="name">All Leads</field>
        <field name="model_id" ref="model_crm_lead"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('group_crm_manager'))]"/>
    </record>
</odoo>
