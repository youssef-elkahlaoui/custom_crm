<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Groupe CRM Avancé -->
        <record id="group_custom_crm_user" model="res.groups">
            <field name="name">CRM Avancé / Utilisateur</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[
                (4, ref('sales_team.group_sale_salesman')),
                (4, ref('sales_team.group_sale_salesman_all_leads'))
            ]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_custom_crm_manager" model="res.groups">
            <field name="name">CRM Avancé / Manager</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[
                (4, ref('sales_team.group_sale_manager')),
                (4, ref('group_custom_crm_user'))
            ]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <!-- Règles d'accès -->
        <record id="custom_crm_rule_personal" model="ir.rule">
            <field name="name">CRM Avancé: voir ses propres opportunités</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_custom_crm_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="custom_crm_rule_manager" model="ir.rule">
            <field name="name">CRM Avancé: voir toutes les opportunités</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_custom_crm_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Règles pour les commandes de vente -->
        <record id="sale_order_personal_rule" model="ir.rule">
            <field name="name">Sales Order: Personal</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_custom_crm_user'))]"/>
        </record>

        <record id="sale_order_manager_rule" model="ir.rule">
            <field name="name">Sales Order: Manager</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_custom_crm_manager'))]"/>
        </record>
    </data>
</odoo>
