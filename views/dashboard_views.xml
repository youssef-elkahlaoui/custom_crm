<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Salesperson Dashboard -->
    <record id="view_salesperson_dashboard_kanban" model="ir.ui.view">
        <field name="name">custom.crm.salesperson.dashboard.kanban</field>
        <field name="model">crm.lead</field>
        <field name="groups_id" eval="[(4, ref('custom_crm.group_custom_crm_salesperson'))]"/>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard" create="1">
                <field name="name"/>
                <field name="expected_revenue"/>
                <field name="probability"/>
                <field name="stage_id"/>
                <field name="user_id"/>
                <field name="date_deadline"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click container">
                            <div class="row">
                                <div class="col-12 mb-2">
                                    <h4 class="text-primary"><field name="name"/></h4>
                                </div>
                                <div class="col-6">
                                    <strong>Revenue: </strong>
                                    <field name="expected_revenue" widget="monetary"/>
                                </div>
                                <div class="col-6">
                                    <strong>Probability: </strong>
                                    <field name="probability"/>%
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-6">
                                    <strong>Stage: </strong>
                                    <field name="stage_id"/>
                                </div>
                                <div class="col-6">
                                    <strong>Deadline: </strong>
                                    <field name="date_deadline"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Manager Dashboard -->
    <record id="view_manager_dashboard_kanban" model="ir.ui.view">
        <field name="name">custom.crm.manager.dashboard.kanban</field>
        <field name="model">crm.lead</field>
        <field name="groups_id" eval="[(4, ref('custom_crm.group_custom_crm_manager'))]"/>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard" create="1">
                <field name="name"/>
                <field name="expected_revenue"/>
                <field name="probability"/>
                <field name="stage_id"/>
                <field name="user_id"/>
                <field name="team_id"/>
                <field name="date_deadline"/>
                <field name="create_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click container">
                            <div class="row">
                                <div class="col-12 mb-2">
                                    <h4 class="text-primary"><field name="name"/></h4>
                                </div>
                                <div class="col-4">
                                    <strong>Revenue: </strong>
                                    <field name="expected_revenue" widget="monetary"/>
                                </div>
                                <div class="col-4">
                                    <strong>Probability: </strong>
                                    <field name="probability"/>%
                                </div>
                                <div class="col-4">
                                    <strong>Stage: </strong>
                                    <field name="stage_id"/>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-4">
                                    <strong>Salesperson: </strong>
                                    <field name="user_id"/>
                                </div>
                                <div class="col-4">
                                    <strong>Team: </strong>
                                    <field name="team_id"/>
                                </div>
                                <div class="col-4">
                                    <strong>Deadline: </strong>
                                    <field name="date_deadline"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Client Portal Dashboard -->
    <record id="view_client_dashboard_kanban" model="ir.ui.view">
        <field name="name">custom.crm.client.dashboard.kanban</field>
        <field name="model">crm.lead</field>
        <field name="groups_id" eval="[(4, ref('custom_crm.group_custom_crm_client'))]"/>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard" create="0">
                <field name="name"/>
                <field name="stage_id"/>
                <field name="user_id"/>
                <field name="date_deadline"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click container">
                            <div class="row">
                                <div class="col-12 mb-2">
                                    <h4 class="text-primary"><field name="name"/></h4>
                                </div>
                                <div class="col-6">
                                    <strong>Status: </strong>
                                    <field name="stage_id"/>
                                </div>
                                <div class="col-6">
                                    <strong>Contact Person: </strong>
                                    <field name="user_id"/>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-12">
                                    <strong>Expected Completion: </strong>
                                    <field name="date_deadline"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Dashboard Actions -->
    <record id="action_salesperson_dashboard" model="ir.actions.act_window">
        <field name="name">My Sales Dashboard</field>
        <field name="res_model">crm.lead</field>
        <field name="view_mode">kanban,form</field>
        <field name="domain">[('user_id', '=', uid)]</field>
        <field name="context">{'group_by': 'stage_id'}</field>
        <field name="view_id" ref="view_salesperson_dashboard_kanban"/>
    </record>

    <record id="action_manager_dashboard" model="ir.actions.act_window">
        <field name="name">Sales Team Dashboard</field>
        <field name="res_model">crm.lead</field>
        <field name="view_mode">kanban,form</field>
        <field name="context">{'group_by': ['team_id', 'stage_id']}</field>
        <field name="view_id" ref="view_manager_dashboard_kanban"/>
    </record>

    <record id="action_client_dashboard" model="ir.actions.act_window">
        <field name="name">My Opportunities</field>
        <field name="res_model">crm.lead</field>
        <field name="view_mode">kanban,form</field>
        <field name="domain">[('partner_id.user_ids', 'in', uid)]</field>
        <field name="view_id" ref="view_client_dashboard_kanban"/>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_salesperson_dashboard"
        name="My Dashboard"
        parent="crm.crm_menu_root"
        action="action_salesperson_dashboard"
        sequence="1"
        groups="custom_crm.group_custom_crm_salesperson"/>

    <menuitem id="menu_manager_dashboard"
        name="Team Dashboard"
        parent="crm.crm_menu_root"
        action="action_manager_dashboard"
        sequence="1"
        groups="custom_crm.group_custom_crm_manager"/>

    <menuitem id="menu_client_dashboard"
        name="My Opportunities"
        parent="crm.crm_menu_root"
        action="action_client_dashboard"
        sequence="1"
        groups="custom_crm.group_custom_crm_client"/>
</odoo>
