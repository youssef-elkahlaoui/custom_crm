<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.custom.crm</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="CRM Avancé" data-key="custom_crm">
                    <h2>Paramètres CRM Avancé</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_auto_reminders"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_auto_reminders"/>
                                <div class="text-muted">
                                    Activer les rappels automatiques pour les opportunités (7, 15, 30 jours)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>